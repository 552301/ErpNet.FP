<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <PublishTrimmed>true</PublishTrimmed>
        <AssemblyName>ErpNet.FP.Server</AssemblyName>
        <TargetFramework>netcoreapp3.0</TargetFramework>
        <LangVersion>8.0</LangVersion>
        <Nullable>enable</Nullable>
        <NullableContextOptions>enable</NullableContextOptions>
        <NullableReferenceTypes>true</NullableReferenceTypes>
        <IsTransformWebConfigDisabled>true</IsTransformWebConfigDisabled>
        <ApplicationIcon>ErpNet.FP.ico</ApplicationIcon>
        <Company>ErpNet</Company>
        <StartupObject />
        <Authors>ErpNet and Contributors</Authors>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
        <Copyright>(c) ErpNet and Contributors</Copyright>
        <AssemblyVersion>1.0.827.1827</AssemblyVersion>
        <FileVersion>1.0.827.1827</FileVersion>
        <Version>1.0.0</Version>
        <GenerateErrorForMissingTargetingPacks>false</GenerateErrorForMissingTargetingPacks>
        <IsWindows Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">true</IsWindows>
        <IsOSX Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))' == 'true'">true</IsOSX>
        <IsLinux Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))' == 'true'">true</IsLinux>
    </PropertyGroup>

    <PropertyGroup Condition="'$(IsWindows)'=='true'">
          <DefineConstants>Windows</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition="'$(IsOSX)'=='true'">
        <DefineConstants>OSX</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition="'$(IsLinux)'=='true'">
        <DefineConstants>Linux</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
        <TrimmerRootAssembly Include="System.IO.FileSystem" />
    </ItemGroup>

    <ItemGroup>
        <Content Remove="appsettings.json" />
        <Content Remove="wwwroot\debug\debug.log" />
        <Content Remove="wwwroot\debug\debug.log.1.zip" />
        <Content Remove="wwwroot\debug\debug.log.2.zip" />
        <Content Remove="wwwroot\debug\debug.log.3.zip" />
        <Content Remove="wwwroot\debug\debug.log.4.zip" />
        <Content Remove="wwwroot\debug\debug.log.5.zip" />
        <Content Remove="wwwroot\debug\debug.log.6.zip" />
        <Content Remove="wwwroot\debug\debug.log.7.zip" />
        <Content Remove="wwwroot\debug\debug.log.8.zip" />
        <Content Remove="wwwroot\debug\debug.log.9.zip" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="ErpNet.FP.ico" />
        <None Remove="ErpNet.FP.thumb.png" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="ErpNet.FP.ico">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="ErpNet.FP.thumb.png">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <None Include="..\LICENSE.txt">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
        <None Include="appsettings.json">
          <CopyToOutputDirectory>Never</CopyToOutputDirectory>
        </None>
        <None Include="wwwroot\debug\debug.log" />
        <None Include="wwwroot\debug\debug.log.1.zip" />
        <None Include="wwwroot\debug\debug.log.2.zip" />
        <None Include="wwwroot\debug\debug.log.3.zip" />
        <None Include="wwwroot\debug\debug.log.4.zip" />
        <None Include="wwwroot\debug\debug.log.5.zip" />
        <None Include="wwwroot\debug\debug.log.6.zip" />
        <None Include="wwwroot\debug\debug.log.7.zip" />
        <None Include="wwwroot\debug\debug.log.8.zip" />
        <None Include="wwwroot\debug\debug.log.9.zip" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="3.0.0-preview7.19365.7" />
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="3.0.0-preview7.19362.4" Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'" />
        <PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="3.0.0-preview7.19362.4" Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'" />
        <PackageReference Include="Microsoft.Extensions.Logging.EventLog" Version="3.0.0-preview7.19362.4" Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\ErpNet.FP.Core\ErpNet.FP.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Content Update="wwwroot\ErpNet.FP.thumb.png">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="wwwroot\favicon.ico">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="wwwroot\index.css">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="wwwroot\index.html">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="wwwroot\index.js">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Properties\PublishProfiles\" />
    </ItemGroup>
</Project>
