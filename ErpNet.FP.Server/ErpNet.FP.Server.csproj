<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <AssemblyName>ErpNet.FP.Server</AssemblyName>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <NullableContextOptions>enable</NullableContextOptions>
    <NullableReferenceTypes>true</NullableReferenceTypes>
    <ApplicationIcon>ErpNet.FP.ico</ApplicationIcon>
    <StartupObject />
    <Company>ErpNet</Company>
    <Authors>ErpNet and Contributors</Authors>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <Copyright>(c) ErpNet and Contributors</Copyright>
    <AssemblyVersion>1.0.627.1617</AssemblyVersion>
    <FileVersion>1.0.627.1617</FileVersion>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="appsettings.Development.json" />
    <Content Remove="wwwroot\debug\debug.log" />
    <Content Remove="wwwroot\debug\debug.log.1.zip" />
    <Content Remove="wwwroot\debug\debug.log.2.zip" />
    <Content Remove="wwwroot\debug\debug.log.3.zip" />
    <Content Remove="wwwroot\debug\debug.log.4.zip" />
    <Content Remove="wwwroot\debug\debug.log.5.zip" />
    <Content Remove="wwwroot\debug\debug.log.6.zip" />
    <Content Remove="wwwroot\debug\debug.log.7.zip" />
    <Content Remove="wwwroot\debug\debug.log.8.zip" />
    <Content Remove="wwwroot\debug\debug.log.9.zip" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="ErpNet.FP.ico" />
    <None Remove="ErpNet.FP.thumb.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="ErpNet.FP.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="ErpNet.FP.thumb.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="appsettings.Development.json" />
    <None Include="wwwroot\debug\debug.log" />
    <None Include="wwwroot\debug\debug.log.1.zip" />
    <None Include="wwwroot\debug\debug.log.2.zip" />
    <None Include="wwwroot\debug\debug.log.3.zip" />
    <None Include="wwwroot\debug\debug.log.4.zip" />
    <None Include="wwwroot\debug\debug.log.5.zip" />
    <None Include="wwwroot\debug\debug.log.6.zip" />
    <None Include="wwwroot\debug\debug.log.7.zip" />
    <None Include="wwwroot\debug\debug.log.8.zip" />
    <None Include="wwwroot\debug\debug.log.9.zip" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="3.0.0-preview6.19307.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ErpNet.FP.Core\ErpNet.FP.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="wwwroot\ErpNet.FP.thumb.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="wwwroot\favicon.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="wwwroot\index.css">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="wwwroot\index.html">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="wwwroot\index.js">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
